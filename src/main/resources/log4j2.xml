<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <File name="File" fileName="logs/app.log">
            <PatternLayout pattern="%d [%t] %-5p %l: %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="TRACE">
            <AppenderRef ref="File" level="TRACE"/>
        </Root>
    </Loggers>
</Configuration>